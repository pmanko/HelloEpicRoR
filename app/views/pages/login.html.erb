<section class='main' id='content'>
  <form class="form-signin" id='login'>
    <div class='row uniform'>
      <div class='3u 0u$(xsmall)'></div><div class='6u 12u$(xsmall)'>
      <h2 class="form-signin-heading">Please sign in</h2>
      </div><div class='3u 0u$(xsmall)'></div>
    </div>
    <div class='row uniform'>
      <div class='3u 0u$(xsmall)'></div><div class='6u 12u$(xsmall)'>
      <label for="inputEmail" class="sr-only">Login</label>
      <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="">
    </div><div class='3u 0u$(xsmall)'></div>
    </div>

    <div class='row uniform'>
      <div class='3u 0u$(xsmall)'></div><div class='6u 12u$(xsmall)'>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="">
    </div><div class='3u 0u$(xsmall)'></div>
    </div>
    <div class='row uniform'>
      <div class='3u 0u$(xsmall)'></div><div class='3u 12u$(xsmall)'>
      <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="patient">
      <label for="inlineRadio1">Patient</label>
    </div>
      <div class='3u 12u$(xsmall)'>
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="provider">
        <label for='inlineRadio2'>Provider</label>
      </div><div class='3u 0u$(xsmall)'></div>
    </div>

    <div class="row uniform">
      <div class='3u'></div><div class='6u'><button class="special fit" type="submit">Sign in</button></div><div class='3u'></div>
    </div>
    <div class='row uniform'>
      <div class='3u 0u$(xsmall)'></div>
      <div class='6u 0u$(xsmall)'>
        <h2>Oauth Logins</h2>
        <% if false #{% if error %} %>
        <p>Hello ! Your email is </p>
        <a href="">Logout</a>
        <% else %>
        <a class='button fit' href="https://open-ic.epic.com/argonaut/oauth2/authorize?response_type=code&client_id=82768a0a-d830-47fc-8e51-e1b410c98fa4&redirect_uri=https://cryptic-beyond-91523.herokuapp.com/login&scope=patient/*.read">Login with OpenEPIC</a></li>
        <a class='button fit' href="https://authorize.smarthealthit.org/?response_type=code&client_id=9dea1c95-06ff-4f58-ae57-6780b7cecd3b&redirect_uri=https://cryptic-beyond-91523.herokuapp.com/login&scope=patient/*.read">Login with SOF Sandbox</a></li>
        <% end %>
      </div>
    </div>
  </form>
</section>